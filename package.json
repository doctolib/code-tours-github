{
  "name": "code-tours-github",
  "version": "0.0.4",
  "scripts": {
    "build": "webpack --config webpack.config.js && cp manifest.json code-tour.png built/",
    "package": "(cd built ; zip -r ../extension.zip .)",
    "clean": "rimraf built"
  },
  "dependencies": {
    "showdown": "^1.9.1",
    "showdown-prettify": "^1.3.0",
    "xss": "^1.0.8"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.126",
    "@types/showdown": "^1.9.3",
    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "@typescript-eslint/parser": "^4.8.1",
    "eslint": "^7.13.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.1",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "ts-loader": "^8.0.11",
    "typescript": "^4.0.5",
    "webpack": "^5.5.1",
    "webpack-cli": "^4.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.json": [
      "prettier --write"
    ],
    "*.{j,t}s{,x}": [
      "prettier --write",
      "eslint --cache --fix"
    ],
    "*.md": [
      "prettier --print-width=80 --prose-wrap=always --write"
    ]
  }
}
